#include<stdio.h>

int main() {
    int n, x, count = 0;
    printf("Nhap so phan tu x co trong mang: ");
    scanf("%d", &n); 
    printf("Nhap gia tri x: ");
    scanf("%d", &x); 
    int arr[n]; 
    printf("Nhap mang %d phan tu:\n", n);
    for (int i = 0; i < n; i++) {
        printf("arr[%d]: ", i);
        scanf("%d", &arr[i]);
    }

    for (int i = 0; i < n; i++) {
        if (arr[i] == x) {
            count++;
            printf("Tai vi tri %d\n", i); 
        }
    }

    if (count > 0) {
        printf("Gia tri x xuat hien %d lan.\n", count); 
    } else {
        printf("Gia tri x khong thuoc mang.\n");
    }
    return 0;
}
